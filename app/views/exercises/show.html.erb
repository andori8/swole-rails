<% if flash[:alert] %>
      <%= flash[:alert] %>
    <% end %>

<%= @exercise.name %><br>
<%= @exercise.sets %><br>
<%= @exercise.reps %><br>
<%= @exercise.description %><br>

<%= form_tag(exercise_workouts_path) do %>
  <%= hidden_field_tag :exercise_id, @exercise.id %>
  <%= collection_select(:exercise_workout, :workout_id, Workout.all, :id, :title) %><br><br>
  <%= submit_tag "Add to Workout" %>
<% end %>

<%= link_to "Edit Exercise", edit_exercise_path(@exercise) %><br>
<%= link_to "Delete Exercise", "/exercises/#{@exercise.id}", method: :delete %><br>
<%= link_to "Back to Exercises", exercises_path %>
