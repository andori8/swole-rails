<% flash.each do |k, v| %>
      <div id="<%= k %>"><%= v %></div>
    <% end %>
    
<h1><%= @workout.title %></h1>
<h1><%= @workout.time %></h1>
<h1><%= @workout.difficulty %></h1>

<ol>
  <% @workout.exercises.each do |exercise| %>
     <li><%= link_to exercise.name, exercise %>   <%= link_to "Remove", exercise_workout_path(exercise), method: :delete %> <br>
     <%= exercise.sets %> sets, <%= exercise.reps %> reps</li>
  <% end %>
</ol>

<ul>
  <% @workout.comments.each do |comment| %>
    <li><%= comment.content %>
    <%= link_to "Edit", edit_workout_comment_path(@workout, comment) %>
    <%= link_to "Delete", workout_destroy_comment_path(@workout, comment), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a Comment", new_workout_comment_path(@workout) %><br>
<%= link_to "Add Exercise", exercises_path %><br>
<%= link_to "Remove", workout_path(@workout), method: :delete %>
<%= link_to "Back to all workouts", workouts_path %>
